	<select id="selectMainFeed" resultType="Board">
		select b.*, u.user_nickname
		  from board_tb b
		 inner join project_tb p
		    on b.project_no = p.project_no
		 inner join user_tb u
		    on u.user_no = p.user_no
		 order by b.post_no desc
	</select>
